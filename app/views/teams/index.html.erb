<div class="wrapper">
<p id="notice"><%= notice %></p>

<h1 style="text-align:center; color: white; padding: 50px;font-size: 50px; background-color:rgb(239, 142, 105); font-weight: 900; box-shadow: 10px 10px 5px gray">Equipa</h1>

<div class="card-1">


    <% @teams.each do |team| %>
<% if admin_signed_in? %>
        <%= link_to 'Show', team %>
        <%= link_to 'Edit', edit_team_path(team) %>
        <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %><br>
        <% end %>
        <%= image_tag team.picture.url, :style => "height: 100px; border-radius: 25%; border: solid 2px black; width: auto; margin: 30px;" %><br>
        <h3><%= team.name %><h3><br>
          <i class="fas fa-book-open" style="font-size: 50px; color: white;"></i><br>
        <p style="margin: 20px;"><%= team.description %><br></p>
        <i class="far fa-envelope" style="font-size: 50px; color: white;"></i><br>
        <h5><%= mail_to team.email %><h5><br>
        <hr style="margin-bottom: 20px;">
    <% end %>
</div>

<br>
<% if admin_signed_in? %>
<%= link_to 'New Team', new_team_path %>
<% end %>
