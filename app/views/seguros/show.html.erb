<div class="home">

  <div>
    <%= image_tag @seguro.image.thumb.url, :class => "style_image"%>
  </div>

  <div style="margin-left: 50px; margin-top: 100px;">
  <h3 style="margin-bottom: 30px; text-align:center;"><%= @seguro.name %></h3>

   </div>

  <hr>

